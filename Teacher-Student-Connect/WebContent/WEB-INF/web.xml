<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp_ID">
	<display-name>Teacher-Student-Connect</display-name>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<display-name>LoginServlet</display-name>
		<description></description>
		<servlet-class>com.cts.connect_project.controller.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<display-name>RegisterServlet</display-name>
		<description></description>
		<servlet-class>com.cts.connect_project.controller.RegisterServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ResourceServlet</servlet-name>
		<display-name>ResourceServlet</display-name>
		<description></description>
		<servlet-class>com.cts.connect_project.controller.ResourceServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FetchTeacherServlet</servlet-name>
		<display-name>FetchTeacherServlet</display-name>
		<description></description>
		<servlet-class>com.cts.connect_project.controller.FetchTeacherServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FetchStudentServlet</servlet-name>
		<display-name>FetchStudentServlet</display-name>
		<description></description>
		<servlet-class>com.cts.connect_project.controller.FetchStudentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/RegisterServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ResourceServlet</servlet-name>
		<url-pattern>/ResourceServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FetchTeacherServlet</servlet-name>
		<url-pattern>/FetchTeacherServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FetchStudentServlet</servlet-name>
		<url-pattern>/FetchStudentServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
	
		<welcome-file>HomePage.html</welcome-file>

	</welcome-file-list>
</web-app>
